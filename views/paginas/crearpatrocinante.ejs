<%- include('../plantillas/cabecera'); %>
<%- include('../plantillas/barranav'); %>
<div class="container mt-4">
  <div class="card border-secondary">
    <div class="card-header bg-primary text-white">Nueva Categor√≠a</div>
    <div class="card-body">
      <form action="/patrocinantes/nuevo/" method="POST">
        <div class="mb-3">
          <label for="patrocinante" class="form-label">Patrocinante</label>
          <input type="text" class="form-control" id="nombre" name="nombre">
          <label for="nivel" class="form-label">Nivel</label>
          <select class="form-control" name="id_nivel" aria-label="Default select example">
          <option selected>Niveles disponibles</option>
          <% listanivel.forEach(lista => { %>
            <option value="<%=lista.id_nivel%>"><%=lista.nivel %></option>
           <% }) %>
          </select>          
        </div>
        <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
        <a href="/" class="btn btn-secondary">Cancelar</a>
      </form>
    </div>
  </div>
</div>
