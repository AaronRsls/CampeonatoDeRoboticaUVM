<%- include('../plantillas/cabecera'); %>
<%- include('../plantillas/barranav'); %>
<div class="container mt-4">
  <div class="card border-secondary">
    <div class="card-header bg-primary text-white">Nuevo Integrante</div>
    <div class="card-body">
      <form action="/integrantes/nuevo/" method="POST">
        <div class="mb-3">
          <label for="integrante" class="form-label">Integrante</label>
          <input type="text" class="form-control" id="nombre_integrante" name="nombre_integrante">
          <label for="equipo" class="form-label">Equipo</label>
          <select class="form-control" name="id_equipo" aria-label="Default select example">
          <option selected>Equipos disponibles</option>
          <% listaequip.forEach(lista => { %>
            <option value="<%=lista.id_equipo%>"><%=lista.nombre_equipo %></option>
           <% }) %>
          </select>          
        </div>
        <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
        <a href="/" class="btn btn-secondary">Cancelar</a>
      </form>
    </div>
  </div>
</div>
<%- include('../plantillas/pie'); %>